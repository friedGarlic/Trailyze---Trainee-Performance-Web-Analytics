@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<head>
<link rel="stylesheet" href="~/js/notification/ikr.notification.css">
</head>

<body>
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="position: relative; top:20px; right: 20px;">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <img src="@ViewData["ImageUrl"]" alt="User Image">
        </a>
    </li>
    <li>
        <span class="material-icons-sharp" style="position: relative; top:10px; right: 10px;">
            notifications_none
        </span>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<div id="noti_Container">

</div>

    <script src="~/js/notification/ikr.notificationPlugin.js"> </script>
</body>

<script type="text/javascript">
    $(document).ready(function () {
        $("#noti_Container").ikrNotificationSetup();
        $.ajax({
            type: "GET",
            dataType: "json",
            url: "Dashboard/GetNotification",
            traditional: true,
            contentType: "application/json;charset=utf-8",
            success: function (data) {
